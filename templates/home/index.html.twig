{% extends 'base.html.twig' %}

{% block title %}Quiz App - Home
{% endblock %}

{% block body %}
	<div>
		<ul>
			{% for question in questions %}
				<a href={{path('question_show',{id:question.id} )}} style="color: inherit; text-decoration: none;">
					<div class="question-card">
						<span style="display:flex; flex-direction: column; align-items: center;">
							{% if question.vote>0 %}
								<i class="fa-solid fa-arrow-up" style="color: #91f7bb"></i>
							{% else %}
								<i class="fa-solid fa-arrow-up"></i>
							{% endif %}
							{{question.vote}}
							{% if question.vote<0 %}
								<i class="fa-solid fa-arrow-down" style="color: red"></i>
							{% else %}
								<i class="fa-solid fa-arrow-down"></i>
							{% endif %}
						</span>

						<div>
							<h2>{{question.title}}</h2>
							<span>{{question.content}}</span>
							<hr>
							<img src={{question.author.img_url}} alt="Photo de l'auteur" style="border-radius:  50%; width:  50px;		  height:  50px;">
							Requested by
							<span style="color: #007930;">
								{{ question.author.name }}
							</span>
						</div>
					</div>
				</a>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
